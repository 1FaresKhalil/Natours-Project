{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch-sass": "sass --watch sass/main.scss css/style.css",
    "dev-server": "live-server",
    "start": " npm-run-all --parallel dev-server watch-sass ",
    "compile-sass": "sass sass/main.scss css/style.comp.css",
    "concat": "concat -o css/style.concat.css css/font-icon.css css/style.comp.css",
    "auto-prefix": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress": "sass css/style.prefix.css css/style.css --style=compressed ",
    "build": "npm-run-all compile-sass concat auto-prefix compress "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "10.3.3",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "postcss-cli": "^8.3.1",
    "sass": "^1.35.2"
  },
  "dependencies": {}
}
